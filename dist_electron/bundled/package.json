{
  "name": "project-tools",
  "version": "0.1.0",
  "changelog": [
    "项目管理",
    "项目的命令管理",
    "命令的快捷执行"
  ],
  "private": true,
  "description": "The project tools",
  "author": "Smadey<smadey@163.com>",
  "main": "background.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build --legacy",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {},
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "electron": "^3.0.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "filter-chunk-webpack-plugin": "^2.1.0",
    "html-webpack-inline-source-plugin": "0.0.10",
    "vue": "^2.5.17",
    "vue-cli-plugin-electron-builder": "^1.0.0-rc.9",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "comma-dangle": "off",
      "space-before-function-paren": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "globals": {
      "Vue": true,
      "VueRouter": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
